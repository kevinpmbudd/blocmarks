<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="text-center"><%= @topic.title %></h1>
    <% @topic.bookmarks.each_slice(4) do |bookmarks| %>
      <div class="row">
        <% bookmarks.each do |bookmark| %>
          <div class="col-md-3">
            <div class="thumbnail">
              <%= image_tag "http://via.placeholder.com/150x150", class: 'media-object' %>
              <div class="caption text-center">
                <a href="#TODO">Like</a>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
