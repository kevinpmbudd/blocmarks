<!DOCTYPE html>
<html>
  <head>
    <title>Blocmarks</title>
    <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <ul class="nav nav-tabs">
        <li><%= link_to "Blocmarks", root_path %></li>
        <% if user_signed_in? %>
          <li class="pull-right"><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
          <li class="pull-right"><%= link_to "#{current_user.name}", edit_user_registration_path %></li>
        <% else %>
          <li class="pull-right"><%= link_to "Sign In", new_user_session_path %></li>
          <li class="pull-right"><%= link_to "Sign Up", new_user_registration_path %></li>
        <% end %>
      </ul>

      <ul class="errors"></ul>

      <% if flash[:notice] %>
        <div class="alert alert-success">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:notice] %>
        </div>
      <% elsif flash[:alert]%>
        <div class="alert alert-warning">
          <button type="button" class="close" data-dismiss="alert">&times;</button>
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>
