<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2>Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(resource.errors.count, "error") %>.</h4>
          <ul>
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_group_tag(resource.errors[:name]) do %>
        <%= f.label :name %><br />
        <%= f.text_field :name, class: 'form-control', autofocus: true %>
      <% end %>

      <%= form_group_tag(resource.errors[:email]) do %>
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'form-control', autocomplete: "email" %>
      <% end %>

      <%= form_group_tag(resource.errors[:password]) do %>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
      <% end %>

      <%= form_group_tag(resource.errors[:password_confirmation]) do %>
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
      <% end %>

      <div class="form-group sign-up-btn">
        <%= f.submit "Sign up", class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
