<% if policy(Like.new).create? %>
  <div>
    <% if like = current_user.liked(bookmark) %>
      <%= link_to "", [bookmark.topic, bookmark, like], class: 'glyphicon glyphicon-star',
                                                       'data-toggle' => 'popover',
                                                       'data-content' => 'Unlike',
                                                        method: :delete %>
    <% else %>
      <%= link_to "", [bookmark.topic, bookmark, Like.new], class: 'glyphicon glyphicon-star-empty',
                                                           'data-toggle' => 'popover',
                                                           'data-content' => 'Like',
                                                            method: :post %>
    <% end %>
  </div>
<% end %>
